<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainLayout"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="left"
        android:maxHeight="50dp"
        android:minHeight="50dp" >

        <ImageButton
            android:id="@+id/imageButtonAddContext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addContextInformation"
            android:src="@drawable/context64" />

        <TextView
            android:id="@+id/textViewProcessTitle"
            android:layout_width="640dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:maxHeight="30dp"
            android:minHeight="30dp"
            android:text="@string/process_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/imageViewBin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bin" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/LayoutMainStack"
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:background="@drawable/stack"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewMainStack"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <RelativeLayout
                    android:id="@+id/LayoutMainStackTaskCard"
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/task"
                    android:gravity="top"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/EditText01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/LinearLayout01"
                        android:layout_alignRight="@+id/LinearLayout01"
                        android:layout_below="@+id/LinearLayout01"
                        android:ems="10" />

                    <LinearLayout
                        android:id="@+id/LinearLayout01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/ImageView01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/work32" />

                        <TextView
                            android:id="@+id/TextView01"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal"
                            android:text="What I do" />

                        <ImageButton
                            android:id="@+id/ImageButton01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/context32" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/LayoutMainStackMsgCard"
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/message"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/LinearLayout03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/ImageView03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/msg32" />

                        <EditText
                            android:id="@+id/EditText03"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10" />

                        <ImageButton
                            android:id="@+id/ImageButton03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/context32" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/LinearLayout03"
                        android:layout_below="@+id/LinearLayout03" >

                        <CheckBox
                            android:id="@+id/CheckBox01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="send to:" />

                        <CheckBox
                            android:id="@+id/CheckBox02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="recive from:" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/EditText04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/LinearLayout04"
                        android:layout_below="@+id/LinearLayout04"
                        android:ems="10"
                        android:inputType="textPersonName" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/LayoutSideStack"
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/stack"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewSideStack"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <RelativeLayout
                    android:id="@+id/LayoutSideStackTaskCard"
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/task"
                    android:gravity="top"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/EditText02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/LinearLayout02"
                        android:layout_alignRight="@+id/LinearLayout02"
                        android:layout_below="@+id/LinearLayout02"
                        android:ems="10" />

                    <LinearLayout
                        android:id="@+id/LinearLayout02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/ImageView02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/work32" />

                        <TextView
                            android:id="@+id/TextView02"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal"
                            android:text="What I do" />

                        <ImageButton
                            android:id="@+id/ImageButton02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/context32" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/LayoutSideStackMsgCard"
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/message"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/LinearLayout05"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/ImageView04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/msg32" />

                        <EditText
                            android:id="@+id/EditText05"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10" />

                        <ImageButton
                            android:id="@+id/ImageButton04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/context32" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout06"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/LinearLayout05"
                        android:layout_below="@+id/LinearLayout05" >

                        <CheckBox
                            android:id="@+id/CheckBox03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="send to:" />

                        <CheckBox
                            android:id="@+id/CheckBox04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="recive from:" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/EditText06"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/LinearLayout06"
                        android:layout_below="@+id/LinearLayout06"
                        android:ems="10"
                        android:inputType="textPersonName" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/LayoutTaskCard"
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:background="@drawable/task"
                android:gravity="top"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/editTextWorkCardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/linearLayout1"
                    android:layout_alignRight="@+id/linearLayout1"
                    android:layout_below="@+id/linearLayout1"
                    android:ems="10" />

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageViewWorkCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/work32" />

                    <TextView
                        android:id="@+id/textViewWorkCard"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:text="What I do" />

                    <ImageButton
                        android:id="@+id/imageButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/context32" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/LayoutMsgCard"
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/message"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/imageViewMsgCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/msg32" />

                    <EditText
                        android:id="@+id/editTextMsgCardName"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10" >

                        <requestFocus />
                    </EditText>

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/context32" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/linearLayout2"
                    android:layout_below="@+id/linearLayout2" >

                    <CheckBox
                        android:id="@+id/checkBoxMsgCardSend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="send to:" />

                    <CheckBox
                        android:id="@+id/checkBoxMsgCardRecive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="recive from:" />
                </LinearLayout>

                <EditText
                    android:id="@+id/editTextMsgCardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/linearLayout3"
                    android:layout_below="@+id/linearLayout3"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </RelativeLayout>
 
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
